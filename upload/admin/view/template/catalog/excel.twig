{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

    <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ heading_title }}</h3>
      </div>
      <div class="panel-body">
        
        <div class="row">
        <form method="post" action="{{action}}">
            
            <div class="col-sm-12 col-md-8">
            <button type="submit" class="btn btn-info pull-right">{{text_save}}</button>
            <div class="clearfix"><br /></div>
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#general" aria-controls="general" role="tab" data-toggle="tab">{{text_tab_pinfo}}</a></li>
                <li role="presentation"><a href="#attr" aria-controls="attr" role="tab" data-toggle="tab">{{text_tab_pattr}}</a></li>
                <li role="presentation"><a href="#desc" aria-controls="desc" role="tab" data-toggle="tab">{{text_tab_adesc}}</a></li>
                <li role="presentation"><a href="#prices" aria-controls="prices" role="tab" data-toggle="tab">{{text_prices}}</a></li>
                <li role="presentation"><a href="#other" aria-controls="other" role="tab" data-toggle="tab">{{text_tab_other}}</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="general">
                <div class="row">
                    <div class="col-xs-12 col-md-6" style="border-right : 1px solid #e2e2e2">

                        <div class="form-group">
                            <label>{{form_model}}</label>
                            <select name="eimport_model" class="form-control form-control-sm">
                                    <option value="00">{{text_select}}</option>
                                {% for row in rows %}
                                    <option value="{{row}}" {{excel_data.eimport_model == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label>{{form_name}}</label>
                            <select name="eimport_name" class="form-control form-control-sm">
                                <option value="00">{{text_select}}</option>
                                {% for row in rows %}
                                    <option value="{{row}}" {{excel_data.eimport_name == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label>{{form_price}}</label>
                            <select name="eimport_price" class="form-control form-control-sm">
                            <option value="00">{{text_select}}</option>
                                {% for row in rows %}
                                    <option value="{{row}}" {{excel_data.eimport_price == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label>{{form_qty}}</label>
                            <select name="eimport_qty" class="form-control form-control-sm">
                            <option value="00">{{text_select}}</option>
                                {% for row in rows %}
                                    <option value="{{row}}" {{excel_data.eimport_qty == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label>{{form_dimention_l}}</label>
                            <select name="eimport_dimentionL" class="form-control form-control-sm">
                            <option value="00">{{text_select}}</option>
                                {% for row in rows %}
                                    <option value="{{row}}" {{excel_data.eimport_dimentionL == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label>{{form_dimention_w}}</label>
                            <select name="eimport_dimentionW" class="form-control form-control-sm">
                            <option value="00">{{text_select}}</option>
                                {% for row in rows %}
                                    <option value="{{row}}" {{excel_data.eimport_dimentionW == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label>{{form_dimention_h}}</label>
                            <select name="eimport_dimentionH" class="form-control form-control-sm">
                            <option value="00">{{text_select}}</option>
                                {% for row in rows %}
                                    <option value="{{row}}" {{excel_data.eimport_dimentionH == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label>{{form_lenght_class}}</label>
                            <select name="eimport_lenght_class" class="form-control form-control-sm">
                                {% for c in length_classes %}<option value="{{c.length_class_id}}" {{excel_data.reimport_lenght_class == c.length_class_id ? 'selected="selected"' : ''}}>{{c.title}} ({{c.unit}})</option>{% endfor %}
                            </select>
                        </div>

                    </div>

                    <div class="col-xs-12 col-md-6">
                        

                        <div class="form-group">
                            <label>{{form_category}}</label>
                            <select name="eimport_category" class="form-control form-control-sm">
                            <option value="00">{{text_select}}</option>
                                {% for row in rows %}
                                    <option value="{{row}}" {{excel_data.eimport_category == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label>{{form_category_sub}}</label>
                            <select name="eimport_category_sub" class="form-control form-control-sm">
                            <option value="00">{{text_select}}</option>
                                {% for row in rows %}
                                    <option value="{{row}}" {{excel_data.eimport_category_sub == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label>{{form_category_sub2}}</label>
                            <select name="eimport_category_sub2" class="form-control form-control-sm">
                            <option value="00">{{text_select}}</option>
                                {% for row in rows %}
                                    <option value="{{row}}" {{excel_data.eimport_category_sub2 == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label>{{form_weight}}</label>
                            <select name="eimport_weight" class="form-control form-control-sm">
                            <option value="00">{{text_select}}</option>
                                {% for row in rows %}
                                    <option value="{{row}}" {{excel_data.eimport_weight == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label>{{form_weight_class}}</label>
                            <select name="eimport_weight_class" class="form-control form-control-sm">
                                {% for c in weight_classes %}<option value="{{c.weight_class_id}}" {{excel_data.eimport_weight_class == c.weight_class_id ? 'selected="selected"' : ''}}>{{c.title}} ({{c.unit}})</option>{% endfor %}
                            </select>
                        </div>


                    </div>
                </div>
                
                </div>
                <div role="tabpanel" class="tab-pane" id="attr">
                
                    <div class="row">

                        {% for attrs in attributes|batch(5) %}
                            <div class="col-xs-12 col-md-6">
                                {% for attr in attrs %}
                                    
                                    <div class="form-group">
                                        <label>{{attr.attribute_group}} >> <span style="font-weight : bolder">{{attr.name}}</span></label>
                                        <select name="eimport_attrs[{{attr.attribute_id}}]" class="form-control form-control-sm">
                                        <option value="00">{{text_select}}</option>
                                            {% for row in rows %}
                                                <option value="{{row}}" {{excel_data.eimport_attrs[attr.attribute_id] == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                            {% endfor %}
                                        </select>
                                    </div>

                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>

                </div>

                <div role="tabpanel" class="tab-pane" id="desc">

                    <div class="row">
                        <div class="col-xs-12 col-md-4">
                            <div class="form-group">
                                <label>{{form_dd_method}}</label>
                                <select name="eimport_ddMetod" class="form-control form-control-sm">
                                    <option value="1" {{excel_data.eimport_ddMetod == '1' ? 'selected="selected"' : ''}}>{{text_ddm_use_source}}</option>
                                    <option value="2" {{excel_data.eimport_ddMetod == '2' ? 'selected="selected"' : ''}}>{{text_ddm_use_defaultDesc}}</option>
                                    <option value="3" {{excel_data.eimport_ddMetod == '3' ? 'selected="selected"' : ''}}>{{text_ddm_use_both}}</option>
                                </select>

                                <p class="text-muted">{{text_use_both_info}}</p>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-4">
                            <div class="form-group">
                                <label>{{form_descRow}}</label>
                                <select name="eimport_description" class="form-control form-control-sm">
                                <option value="00">{{text_select}}</option>
                                    {% for row in rows %}
                                        <option value="{{row}}" {{excel_data.eimport_description == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-gruop">
                        <label>{{form_defaultDesc}}</label>
                        <textarea name="eimport_defaultDesc" class="form-control form-control-sm">{{excel_data.eimport_defaultDesc}}</textarea>
                    </div>

                    <div class="text-muted">{{text_dd_info}}</div>

                </div>

                <div role="tabpanel" class="tab-pane" id="prices">

                    {% for g in customer_groups %}

                    <div class="row">
                        <div class="col-xs-12 col-md-4">
               
                            <div class="form-group">
                                <label>{{g.name}} GROUP : {{form_discount_group}}</label>
                                <select name="eimport_activeDiscountGroup[{{g.customer_group_id}}]" class="form-control form-control-sm">
                                <option value="00">{{text_select}}</option>
                                    {% for row in rows %}
                                        <option value="{{row}}" {{excel_data.eimport_activeDiscountGroup[g.customer_group_id] == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                    {% endfor %}
                                </select>
                            </div>

                        </div>


                    </div>

                    {% endfor %}
                </div>
                <div role="tabpanel" class="tab-pane" id="other">
                
                    <div class="row">
                        <div class="col-xs-12 col-md-6" style="border-right : 1px solid #e2e2e2">
                            

                            <div class="row">
                                <div class="col-xs-12 col-md-6">
                                    <div class="form-group">
                                        <label>{{form_product_prefix}}</label>
                                        <select name="eimport_productNamePrefixMetod" class="form-control form-control-sm">
                                            <option value="-1" {{excel_data.eimport_productNamePrefixMetod == '-1' ? 'selected="selected"' : ''}}>{{text_disabled}}</option>
                                            <option value="0" {{excel_data.eimport_productNamePrefixMetod == '0' ? 'selected="selected"' : ''}}>{{text_fill_if_empty}}</option>
                                            <option value="1" {{excel_data.eimport_productNamePrefixMetod == '1' ? 'selected="selected"' : ''}}>{{text_fill_anyway}}</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-md-6">
                                    <div class="form-group">
                                        <label>{{form_product_prefix_row}}</label>
                                        <select name="eimport_productNamePrefixSource" class="form-control form-control-sm">
                                        <option value="00">{{text_select}}</option>
                                            {% for row in rows %}
                                                <option value="{{row}}" {{excel_data.eimport_productNamePrefixSource == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </div>

                             <div class="row">
                                <div class="col-xs-12 col-md-6">
                                    <div class="form-group">
                                        <label>{{form_product_sufix}}</label>
                                        <select name="eimport_productNameSufixMetod" class="form-control form-control-sm">
                                            <option value="-1" {{excel_data.eimport_productNameSufixMetod == '-1' ? 'selected="selected"' : ''}}>{{text_disabled}}</option>
                                            <option value="0" {{excel_data.eimport_productNameSufixMetod == '0' ? 'selected="selected"' : ''}}>{{text_fill_if_empty}}</option>
                                            <option value="1" {{excel_data.eimport_productNameSufixMetod == '1' ? 'selected="selected"' : ''}}>{{text_fill_anyway}}</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-md-6">
                                    <div class="form-group">
                                        <label>{{form_product_sufix_row}}</label>
                                        <select name="eimport_productNameSufixSource" class="form-control form-control-sm">
                                        <option value="00">{{text_select}}</option>
                                            {% for row in rows %}
                                                <option value="{{row}}" {{excel_data.eimport_productNameSufixSource == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-12 col-md-6">
                                    <div class="form-group">
                                        <label>{{form_metaDesc_method}}</label>
                                        <select name="eimport_metaDescMetod" class="form-control form-control-sm">
                                            <option value="-1" {{excel_data.eimport_metaDescMetod == '-1' ? 'selected="selected"' : ''}}>{{text_disabled}}</option>
                                            <option value="0" {{excel_data.eimport_metaDescMetod == '0' ? 'selected="selected"' : ''}}>{{text_use_source}}</option>
                                            <option value="1" {{excel_data.eimport_metaDescMetod == '1' ? 'selected="selected"' : ''}}>{{text_use_source_fp}}</option>
                                            <option value="2" {{excel_data.eimport_metaDescMetod == '2' ? 'selected="selected"' : ''}}>{{text_use_auto_desc}}</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-md-6">
                                    <div class="form-group">
                                        <label>{{form_metaDesc}}</label>
                                        <select name="eimport_metaDesc" class="form-control form-control-sm">
                                        <option value="00">{{text_select}}</option>
                                            {% for row in rows %}
                                                <option value="{{row}}" {{excel_data.eimport_metaDesc == row ? 'selected="selected"' : ''}}>{{row}} {{text_row}}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </div>

                        </div>


                        <div class="col-xs-12 col-md-6">
                            
                            <div class="form-group">
                                <label>{{form_reqShipping}}</label>
                                <select name="eimport_reqShipping" class="form-control form-control-sm">
                                    <option value="1" {{excel_data.eimport_reqShipping == '1' ? 'selected="selected"' : ''}}>{{text_yes}}</option>
                                    <option value="0" {{excel_data.eimport_reqShipping == '0' ? 'selected="selected"' : ''}}>{{text_no}}</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>{{form_taxClass}}</label>
                                <select name="eimport_taxClass" class="form-control form-control-sm">
                                    
                                    <option value="0">{{text_none}}</option>
                                    {% for t in tax_classes %}
                                        <option value="{{t.tax_class_id}}" {{excel_data.eimport_taxClass == t.tax_class_id ? 'selected="selected"' : ''}}>{{t.title}}</option>
                                    {% endfor %}
                                
                                </select>
                            </div>

                            <div class="form-group">
                                <label>{{form_stockStatus}}</label>
                                <select name="eimport_stockStatus" class="form-control form-control-sm">
                                    
                                    {% for t in stock_statuses %}
                                        <option value="{{t.stock_status_id}}" {{excel_data.eimport_stockStatus == t.stock_status_id ? 'selected="selected"' : ''}}>{{t.name}}</option>
                                    {% endfor %}
                                
                                </select>
                            </div>

                            <div class="checkbox">
                                <label>
                                    <input name="eimport_update_exist" value="1" {{excel_data.eimport_update_exist == '1' ? 'checked="checked"' : ''}} type="checkbox"> {{form_update_exist}}
                                </label>
                            </div>

                        </div>
                    </div>

                </div>
            </div>


            </div><!-- settings panel-->
        </form>

        <div class="col-xs-12 col-md-4" style="border-left : 1px solid #e2e2e2">

            <div class="alert alert-info">
                {{text_upload_info}}
            </div>

            <form method="post" action="{{upload_action}}" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="exampleInputFile">{{text_select_excel}}</label>
                    <input type="file" name="excel_file" id="exampleInputFile">
                    <p class="help-block">{{text_upload_info}}</p>
                </div>

                <button type="submit" class="btn btn-success">{{text_upload}}</button>

            </form>

        </div>
        </div><!-- row -->
      </div>
    </div>
    </div>
</div>

{{ footer }}